{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["vite/client"],
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts"
  ]
}